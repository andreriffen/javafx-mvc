<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="andreriffen.javafxmvc.controller.FXMLVBoxMainController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Cadastros">
            <!-- onAction="#handleMenuItemCadastrosClientes"-->
            <items>
              <MenuItem mnemonicParsing="false" text="Categorias" />
                  <MenuItem fx:id="menuItemCadastrosClientes" mnemonicParsing="false" text="Clientes" onAction="#handleMenuItemCadastrosClientes"/>
                  <MenuItem mnemonicParsing="false" text="Produtos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Processos">
            <items>
              <MenuItem fx:id="menuItemProcessosVendas" mnemonicParsing="false" text="Vendas" onAction="#handleMenuItemProcessosVendas" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Gráficos">
               <items>
                  <MenuItem fx:id="menuItemGraficosVendasPorMes" mnemonicParsing="false" text="Vendas por Mês" onAction="#handleMenuItemGraficosVendasPorMes" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Relatórios">
            <items>
              <MenuItem fx:id="menuItemRelatoriosQuantidadeProdutos" mnemonicParsing="false" text="Quantidade de Produtos em Estoque" onAction="#handleMenuItemRelatoriosQuantidadeProdutos" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane fx:id="anchorPane" />
   </children>
</VBox>
